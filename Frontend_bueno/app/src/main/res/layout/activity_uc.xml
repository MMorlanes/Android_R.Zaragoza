<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Funciones del Cliente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_margin="8dp">

            <!-- Barra de búsqueda -->
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar productos..."
                android:textColor="@color/black"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@android:drawable/ic_menu_search" />

            <!-- Botón de búsqueda -->
            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Buscar" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorias:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textColor="@color/black" />

        <!-- Contenedor horizontal para los botones de categorías -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Botón: Categoría Accesorios -->
            <Button
                android:id="@+id/btnCategoryAccessories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accesorios"
                android:layout_marginEnd="8dp" />

            <!-- Botón: Categoría Verano -->
            <Button
                android:id="@+id/btnCategorySummer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verano"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" />

            <!-- Botón: Categoría Ropa -->
            <Button
                android:id="@+id/btnCategoryClothing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ropa"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Botón: Listado de los 10 propietarios con más ventas -->
        <Button
            android:id="@+id/btnTop10Sellers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listado de los 10 propietarios con más ventas"
            android:layout_marginBottom="12dp" />

        <!-- Botón: Listado de los 10 productos más puntuados -->
        <Button
            android:id="@+id/btnTopRatedProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listado de los 10 productos más puntuados"
            android:layout_marginBottom="12dp" />

        <!-- Botón: Histórico de compras -->
        <Button
            android:id="@+id/btnPurchaseHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Histórico de compras"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
